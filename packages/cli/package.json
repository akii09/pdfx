{
  "name": "@akii09/pdfx-cli",
  "version": "0.1.1",
  "description": "CLI for PDFx components",
  "type": "module",
  "bin": {
    "pdfx": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest run --passWithNoTests",
    "lint": "biome check src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "prompts": "^2.4.2",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@pdfx/shared": "workspace:*",
    "@types/node": "catalog:",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.5.1",
    "vitest": "catalog:",
    "rimraf": "^6.0.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": false
  }
}
