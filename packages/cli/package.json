{
  "name": "@pdfx/cli",
  "version": "0.1.0",
  "description": "CLI for PDFX components",
  "type": "module",
  "bin": {
    "pdfx": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest run --passWithNoTests",
    "lint": "biome check src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@pdfx/shared": "workspace:*",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^9.3.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.5.1",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "rimraf": "^6.0.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  }
}
