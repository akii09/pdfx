{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true
    },
    "build:registry": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/registry/index.json",
        "src/lib/build-registry.ts"
      ],
      "outputs": ["public/r/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "format": {
      "cache": true
    },
    "typecheck": {
      "cache": true,
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
